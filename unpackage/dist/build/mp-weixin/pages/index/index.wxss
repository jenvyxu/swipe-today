.container{display:flex;flex-direction:column;align-items:center;height:100vh;background:palegreen;width:100%}.container .card-wrapper{position:relative;width:500rpx;flex-grow:1}.container .card-wrapper .card{box-sizing:border-box;position:absolute;width:100%;height:640rpx;margin-top:200rpx;transition:ease-in-out 50ms;display:flex;align-items:center;justify-content:center;font-size:420rpx;font-weight:700;font-family:Arial,Helvetica,sans-serif;border:24rpx solid rgba(0,0,0,.2);border-radius:32rpx;color:rgba(0,0,0,.8)}.container .card-wrapper .card.ok{background-color:#7bd3ea}.container .card-wrapper .card.nice{background-color:#54b435}.container .card-wrapper .card.bad{background-color:#f94c10}.container .footer{display:flex;align-items:center;justify-content:space-around;height:200rpx;width:100%}.container .footer .btn{padding:16rpx 20rpx;border-radius:10rpx;box-shadow:#000 2rpx 4rpx 12rpx}.container .footer .btn:first-child{background-color:#f94c10}.container .footer .btn:nth-child(2){background-color:#7bd3ea}.container .footer .btn:nth-child(3){background-color:#54b435}
